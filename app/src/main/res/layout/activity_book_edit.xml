<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="20dp"
    tools:context=".Book_Edit">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_book_title"
                android:hint="Title"
                android:inputType="textPersonName"
                style="@style/editext"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_book_Author"
                android:hint="Author"
                android:inputType="textPersonName"
                style="@style/editext"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_book_ISBN"
                android:hint="ISBN"
                android:inputType="textPersonName"
                style="@style/editext"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_book_number_of_quantity"
                android:hint="Number of quantity"
                android:inputType="textPersonName"
                style="@style/editext"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_book_encoded_by"
                android:hint="encoded_by"
                android:inputType="textPersonName"
                style="@style/editext"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_book_numpages"
                android:hint="Number of pages"
                android:inputType="textPersonName"
                style="@style/editext"/>
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/edit_Purch_Date"
                android:text="Purch Date"
                style="@style/textview2"/>
            <Button
                android:onClick="btn_purchDate"
                android:text="Purch Date"
                style="@style/button2"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/edit_Publish_Year"
                android:text="Publish Year"
                style="@style/textview2"/>
            <Button
                android:onClick="btn_publishYear"
                android:id="@+id/Btn_add_Publish_Year"
                android:text="Publish Year"
                style="@style/button2"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/edit_copy_righ_year_book"
                android:text="Copy Right Year"
                style="@style/textview2"/>
            <Button
                android:onClick="btn_copyrightyear"
                android:id="@+id/Btn_copy_righ_year_book"
                android:text="Copy Right Year"
                style="@style/button2"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/edit_date_encoded_book"
                android:text="Date Encoded"
                style="@style/textview2"/>
            <Button
                android:onClick="btn_dateencoded"
                android:id="@+id/Btn_date_encoded_book"
                android:text="Date Encoded"
                style="@style/button2"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_book_discription"
                android:hint="Discription"
                android:inputType="textMultiLine"
                android:layout_height="100dp"
                style="@style/editext"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:onClick="Edit_book"
            android:id="@+id/edit_Book"
            android:layout_marginTop="10dp"
            android:text="edit"
            style="@style/button2"/>
        <Button
            android:onClick="Cancle_edit_book"
            android:id="@+id/Cancle_edit_Book"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:text="Cancle"
            style="@style/button2"/>
    </LinearLayout>

</ScrollView>