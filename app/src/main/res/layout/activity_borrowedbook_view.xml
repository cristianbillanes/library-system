<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    tools:context=".Borrowedbook_view">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="ID: "
                    style="@style/textview3"/>
                <TextView
                    android:text="Name: "
                    style="@style/textview3"/>
                <TextView
                    android:text="Title: "
                    style="@style/textview3"/>
                <TextView
                    android:text="Date borrowed: "
                    style="@style/textview3"/>
                <TextView
                    android:text="Duedate: "
                    style="@style/textview3"/>
                <TextView
                    android:text="Number of Copies: "
                    style="@style/textview3"/>
                <TextView
                    android:text="Status: "
                    style="@style/textview3"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/borrowedbook_view_id"
                    android:text="id "
                    style="@style/textview4"/>
                <TextView
                    android:id="@+id/borrowedbook_view_name"
                    android:text="name "
                    style="@style/textview4"/>
                <TextView
                    android:id="@+id/borrowedbook_view_title"
                    android:text="title "
                    style="@style/textview4"/>
                <TextView
                    android:id="@+id/borrowedbook_view_dateborrowed"
                    android:text="dateborrowed "
                    style="@style/textview4"/>
                <TextView
                    android:id="@+id/borrowedbook_view_duedate"
                    android:text="duedate "
                    style="@style/textview4"/>
                <TextView
                    android:id="@+id/borrowedbook_view_numcopies"
                    android:text="numcopies "
                    style="@style/textview4"/>
                <TextView
                    android:id="@+id/borrowedbook_view_bstatus"
                    android:text="bstatus "
                    style="@style/textview4"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:onClick="borrowedbook_view_to_edit"
            android:id="@+id/edit_Book"
            android:layout_marginTop="30dp"
            android:text="Edit"
            style="@style/button2"/>
        <Button
            android:onClick="borrrowedbook_view_return"
            android:id="@+id/edit_return"
            android:layout_marginTop="5dp"
            android:text="Return"
            style="@style/button2"/>
        <Button
            android:onClick="borrowedbook_view_delete"
            android:id="@+id/edit_delete"
            android:layout_marginTop="5dp"
            android:text="Delete"
            style="@style/button2"/>
        <Button
            android:onClick="borrowedbook_view_back"
            android:id="@+id/edit_Back"
            android:layout_marginTop="5dp"
            android:text="Back"
            style="@style/button2"/>
    </LinearLayout>

</ScrollView>