<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    tools:context=".Book_View">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="ID: "
                    style="@style/textview3"/>
                <TextView
                    android:text="Title: "
                    style="@style/textview3"/>
                <TextView
                    android:text="Author: "
                    style="@style/textview3"/>
                <TextView
                    android:text="ISBN: "
                    style="@style/textview3"/>
                <TextView
                    android:text="Purchdate: "
                    style="@style/textview3"/>
                <TextView
                    android:text="Publishyear: "
                    style="@style/textview3"/>
                <TextView
                    android:text="Number of Pages: "
                    style="@style/textview3"/>
                <TextView
                    android:text="Quantity: "
                    style="@style/textview3"/>
                <TextView
                    android:text="Date encoded: "
                    style="@style/textview3"/>
                <TextView
                    android:text="Encoded by: "
                    style="@style/textview3"/>
                <TextView
                    android:text="Copy right year: "
                    style="@style/textview3"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/id_book_view"
                    android:text="id "
                    style="@style/textview4"/>
                <TextView
                    android:id="@+id/title_book_view"
                    android:text="title "
                    style="@style/textview4"/>
                <TextView
                    android:id="@+id/author_book_view"
                    android:text="author "
                    style="@style/textview4"/>
                <TextView
                    android:id="@+id/isbn_book_view"
                    android:text="isbn "
                    style="@style/textview4"/>
                <TextView
                    android:id="@+id/purchdate_book_view"
                    android:text="purchdate "
                    style="@style/textview4"/>
                <TextView
                    android:id="@+id/publishyear_book_view"
                    android:text="Publishyear "
                    style="@style/textview4"/>
                <TextView
                    android:id="@+id/numpages_book_view"
                    android:text="numpages "
                    style="@style/textview4"/>
                <TextView
                    android:id="@+id/numquantity_book_view"
                    android:text="numquantity "
                    style="@style/textview4"/>
                <TextView
                    android:id="@+id/dateencoded_book_view"
                    android:text="dateencoded "
                    style="@style/textview4"/>
                <TextView
                    android:id="@+id/encodedby_book_view"
                    android:text="encodedby "
                    style="@style/textview4"/>
                <TextView
                    android:id="@+id/copyrigthyear_book_view"
                    android:text="copy rigth year "
                    style="@style/textview4"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:text="Discription: "
            android:textColor="@color/red"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:id="@+id/dicription_book_view"
            android:text="discription "
            android:inputType="textMultiLine"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <Button
            android:onClick="book_view_to_edit"
            android:id="@+id/view_book_edit"
            android:layout_marginTop="30dp"
            android:text="Edit"
            style="@style/button2"/>
        <Button
            android:onClick="book_view_delete"
            android:id="@+id/view_book_delete"
            android:layout_marginTop="5dp"
            android:text="Delete"
            style="@style/button2"/>
        <Button
            android:onClick="book_view_back"
            android:id="@+id/view_book_back"
            android:layout_marginTop="5dp"
            android:text="Back"
            style="@style/button2"/>
    </LinearLayout>

</ScrollView>