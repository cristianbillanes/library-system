<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">
    <TextView
        android:id="@+id/text_gradeview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade View"
        android:textSize="25dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/text_gradeview2"
        android:layout_toRightOf="@+id/text_gradeview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   "
        android:textSize="25dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/text_gradeview3"
        android:layout_toRightOf="@+id/text_gradeview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade View"
        android:textSize="25dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/text_gradeview4"
        android:layout_toRightOf="@+id/text_gradeview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Grade View"
        android:textSize="25dp"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/show_bar"
        android:src="@drawable/view_bar"
        android:layout_toLeftOf="@+id/delete_bar"
        android:text="Edit"
        android:layout_marginRight="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <ImageView
        android:id="@+id/delete_bar"
        android:src="@drawable/delete_bar"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
</RelativeLayout>